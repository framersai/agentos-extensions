{
  "$schema": "https://agentos.sh/schemas/extension-manifest-v1.json",
  "id": "com.framers.channels.teams",
  "name": "Microsoft Teams Channel Extension",
  "version": "0.1.0",
  "description": "Microsoft Teams bot via Bot Framework â€” supports inbound webhooks + proactive outbound sends.",
  "categories": ["channel", "communication"],
  "platforms": ["teams"],
  "sdk": "botbuilder",
  "extensions": [
    {
      "kind": "tool",
      "id": "teamsChannelSendMessage",
      "displayName": "Send Teams Message"
    },
    {
      "kind": "messaging-channel",
      "id": "teamsChannel",
      "displayName": "Teams Channel Adapter"
    },
    {
      "kind": "http-handler",
      "id": "teamsWebhook",
      "displayName": "Teams Webhook Handler"
    }
  ],
  "requiredSecrets": ["teams.appId", "teams.appPassword"],
  "features": ["Outbound proactive messaging", "Inbound messaging via bot framework webhooks"]
}
