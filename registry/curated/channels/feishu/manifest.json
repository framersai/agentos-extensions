{
  "$schema": "https://agentos.sh/schemas/extension-manifest-v1.json",
  "id": "com.framers.channels.feishu",
  "name": "Feishu / Lark Channel Extension",
  "version": "0.1.0",
  "description": "Feishu (Lark) bot via official SDK â€” supports outbound messages + inbound webhooks.",
  "categories": ["channel", "communication"],
  "platforms": ["feishu"],
  "sdk": "@larksuiteoapi/node-sdk",
  "extensions": [
    {
      "kind": "tool",
      "id": "feishuChannelSendMessage",
      "displayName": "Send Feishu Message"
    },
    {
      "kind": "messaging-channel",
      "id": "feishuChannel",
      "displayName": "Feishu Channel Adapter"
    },
    {
      "kind": "http-handler",
      "id": "feishuWebhook",
      "displayName": "Feishu Webhook Handler"
    }
  ],
  "requiredSecrets": ["feishu.appId", "feishu.appSecret", "feishu.verificationToken", "feishu.encryptKey"],
  "features": ["Outbound messaging", "Inbound event subscriptions via webhook"]
}
