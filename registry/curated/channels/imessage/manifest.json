{
  "$schema": "https://agentos.sh/schemas/extension-manifest-v1.json",
  "id": "com.framers.channels.imessage",
  "name": "iMessage Channel Extension",
  "version": "0.1.0",
  "description": "iMessage bridge via BlueBubbles â€” macOS server required. Supports outbound sends + inbound webhooks.",
  "categories": ["channel", "communication"],
  "platforms": ["imessage"],
  "sdk": "bluebubbles",
  "extensions": [
    {
      "kind": "tool",
      "id": "imessageChannelSendMessage",
      "displayName": "Send iMessage"
    },
    {
      "kind": "messaging-channel",
      "id": "imessageChannel",
      "displayName": "iMessage Channel Adapter"
    },
    {
      "kind": "http-handler",
      "id": "imessageWebhook",
      "displayName": "BlueBubbles Webhook Handler"
    }
  ],
  "requiredSecrets": ["imessage.serverUrl", "imessage.password"],
  "features": ["Outbound text messaging", "Inbound webhooks (BlueBubbles)"]
}
