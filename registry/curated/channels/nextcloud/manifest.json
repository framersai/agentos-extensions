{
  "$schema": "https://agentos.sh/schemas/extension-manifest-v1.json",
  "id": "com.framers.channels.nextcloud",
  "name": "NextCloud Talk Channel Extension",
  "version": "0.1.0",
  "description": "Nextcloud Talk bot API â€” self-hosted, privacy-focused team messaging via webhook bots.",
  "categories": ["channel", "communication"],
  "platforms": ["nextcloud-talk"],
  "sdk": "nextcloud-talk-bot",
  "extensions": [
    {
      "kind": "tool",
      "id": "nextcloudChannelSendMessage",
      "displayName": "Send NextCloud Talk Message"
    },
    {
      "kind": "messaging-channel",
      "id": "nextcloudChannel",
      "displayName": "NextCloud Talk Channel Adapter"
    },
    {
      "kind": "http-handler",
      "id": "nextcloudTalkWebhook",
      "displayName": "Nextcloud Talk Webhook Handler"
    }
  ],
  "requiredSecrets": ["nextcloud.url", "nextcloud.token"],
  "features": ["Outbound messaging", "Inbound webhooks (Nextcloud Talk bot)"]
}
