{
  "$schema": "https://agentos.sh/schemas/extension-manifest-v1.json",
  "id": "com.framers.channels.twitch",
  "name": "Twitch Channel Extension",
  "version": "0.1.0",
  "description": "Twitch IRC chat via tmi.js â€” supports inbound/outbound chat messaging.",
  "categories": ["channel", "communication"],
  "platforms": ["twitch"],
  "sdk": "tmi.js",
  "extensions": [
    {
      "kind": "tool",
      "id": "twitchChannelSendMessage",
      "displayName": "Send Twitch Chat Message"
    },
    {
      "kind": "messaging-channel",
      "id": "twitchChannel",
      "displayName": "Twitch Channel Adapter"
    }
  ],
  "requiredSecrets": ["twitch.oauthToken", "twitch.username", "twitch.channel"],
  "features": ["Inbound chat subscriptions", "Outbound chat messages"]
}
