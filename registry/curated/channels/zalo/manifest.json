{
  "$schema": "https://agentos.sh/schemas/extension-manifest-v1.json",
  "id": "com.framers.channels.zalo",
  "name": "Zalo Channel Extension",
  "version": "0.1.0",
  "description": "Zalo Bot API â€” text messaging with optional webhook or long-polling.",
  "categories": ["channel", "communication"],
  "platforms": ["zalo"],
  "sdk": "zalo-api",
  "extensions": [
    {
      "kind": "tool",
      "id": "zaloChannelSendMessage",
      "displayName": "Send Zalo Message"
    },
    {
      "kind": "messaging-channel",
      "id": "zaloChannel",
      "displayName": "Zalo Channel Adapter"
    },
    {
      "kind": "http-handler",
      "id": "zaloWebhook",
      "displayName": "Zalo Webhook Handler"
    }
  ],
  "requiredSecrets": ["zalo.botToken"],
  "features": ["Outbound messaging", "Inbound messaging (polling or webhook)"]
}
