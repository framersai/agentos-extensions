{
  "$schema": "https://agentos.sh/schemas/extension-manifest-v1.json",
  "id": "com.framers.channels.matrix",
  "name": "Matrix Channel Extension",
  "version": "0.1.0",
  "description": "Matrix/Element via matrix-bot-sdk â€” decentralized, federated messaging.",
  "categories": ["channel", "communication"],
  "platforms": ["matrix"],
  "sdk": "@vector-im/matrix-bot-sdk",
  "extensions": [
    {
      "kind": "tool",
      "id": "matrixChannelSendMessage",
      "displayName": "Send Matrix Message"
    },
    {
      "kind": "messaging-channel",
      "id": "matrixChannel",
      "displayName": "Matrix Channel Adapter"
    }
  ],
  "requiredSecrets": ["matrix.homeserverUrl", "matrix.accessToken"],
  "features": ["Outbound text messaging", "Inbound messages via sync"]
}
