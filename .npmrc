# NPM Configuration for Extensions

# Use exact versions for better reproducibility
save-exact=true

# Ensure package-lock.json is used
package-lock=true

# Registry for @framers scope
@framers:registry=https://registry.npmjs.org/

# Auth token (populated by CI via NPM_TOKEN env var)
//registry.npmjs.org/:_authToken=${NPM_TOKEN}

# Access level for publishing
access=public

# Audit level
audit-level=moderate

# Fund message
fund=false
